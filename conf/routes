# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# An example controller showing a sample home page
GET     /                           controllers.HomeController.index
# An example controller showing how to use dependency injection
GET     /count                      controllers.CountController.count
# An example controller showing how to write asynchronous code
GET     /message                    controllers.AsyncController.message

# View
+ nocsrf
POST    /asset                      controllers.AssetsController.insertAssets
GET     /assets                     controllers.AssetsController.viewAssets(page: Int ?= 1, size: Int ?= 10)
GET     /assets/insert              controllers.AssetsController.viewInsertAssets
POST    /assets/search              controllers.AssetsController.searchAssets

GET     /stations                   controllers.StationController.viewStations(name: Option[String] ?= None, available: Option[Int] ?= None, page: Int ?= 1)
+ nocsrf
POST    /stations                   controllers.StationController.filterStationAction
GET     /stations/add               controllers.StationController.viewAddStation
GET     /payments                   controllers.PaymentController.getPayments

# API
GET     /api/payments/:id           controllers.api.PaymentController.getPayment(id: String)
POST    /api/payments               controllers.api.PaymentController.createTransaction

+ nocsrf
POST    /stations/add               controllers.StationController.addStation

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(file)

GET     /api/payments               controllers.PaymentController.getPayments
GET     /api/histories              controllers.HistoryController.getHistories